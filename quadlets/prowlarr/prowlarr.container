[Unit]
Description=Manage indexers
After=network-online.target

[Service]
Restart=on-failure
TimeoutStartSec=900

[Install]
WantedBy=default.target

[Container]
Image=ghcr.io/hotio/prowlarr
ContainerName=prowlarr
HostName=prowlarr

Volume=prowlarr-config:/config
Volume=/volumes/video:/data

PublishPort=9696

